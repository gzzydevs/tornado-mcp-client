{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "../../dist/main",
    "rootDir": "..",
    "module": "ESNext",
    "target": "ES2023",
    "lib": ["ES2023"],
    "types": ["node"],
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler"
  },
  "include": ["./**/*", "../shared/**/*"],
  "exclude": ["node_modules"]
}
